<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Mengatur sudut (corner) -->
            <solid android:color="#009900" /> <!-- Warna hijau saat tombol ditekan -->
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" /> <!-- Mengatur sudut (corner) -->
            <solid android:color="#00FF00" /> <!-- Warna hijau default -->
        </shape>
    </item>
</selector>
