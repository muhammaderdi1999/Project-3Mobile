<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".MenuFragment.HomeFragment">

    <ScrollView
        android:id="@+id/scrollviewid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linear1"
            android:orientation="vertical">
            <androidx.viewpager.widget.ViewPager
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_170sdp" />
        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:layout_marginLeft="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_20sdp"
            android:backgroundTint="@color/white"
            android:id="@+id/cardviewtengah"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="-15dp"
            android:layout_below="@+id/linear1"
            android:outlineAmbientShadowColor="@color/greendark"
            app:cardElevation="@dimen/_16sdp"
            app:cardMaxElevation="@dimen/_20sdp"
            android:visibility="visible"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wellcometengah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Selamat Datang"
                    android:textColor="@color/greendark"
                    android:textSize="@dimen/_14ssp"
                    android:gravity="center"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/namauserhometengah"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:text="Namamu"
                    android:textColor="@color/greendark"
                    android:textSize="@dimen/_14ssp"
                    android:gravity="center"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/keprofiltengah"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_55sdp"
                android:scaleType="fitXY"
                android:backgroundTint="@color/white"
                android:layout_gravity="end|center_vertical"
                android:layout_marginRight="@dimen/_10sdp"
                android:src="@drawable/profilimagefull"
                />
        </com.google.android.material.card.MaterialCardView>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Layanan yang dikelola oleh\nDinas PORABUDPAR:"
                android:textSize="@dimen/_14ssp"
                android:textColor="@color/greendark"
                android:fontFamily="sans-serif"
                android:id="@+id/textpemberitahuanlayanan"
                android:layout_below="@+id/cardviewtengah"
                android:layout_marginTop="@dimen/_10sdp"
                android:textStyle="bold"
                android:shadowColor="#40000000"
                android:shadowDx="2"
                android:shadowDy="5"
                android:shadowRadius="10"

                android:layout_marginLeft="@dimen/_20sdp"/>
            <TableLayout
                android:layout_below="@+id/textpemberitahuanlayanan"
                android:id="@+id/tabellayout"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_minus10sdp"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:gravity="center_horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardevent"
                            android:layout_width="@dimen/_115sdp"
                            android:layout_height="@dimen/_115sdp"
                            android:backgroundTint="@color/white"
                            app:strokeColor="@color/gray"
                            app:strokeWidth="@dimen/_1sdp"
                            android:layout_margin="@dimen/_12sdp"
                            app:cardElevation="@dimen/_8sdp"
                            app:cardMaxElevation="@dimen/_16sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="@dimen/_70sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/calendar" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-10dp"
                                    android:text="Upload Event"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14ssp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardpinjam"
                            android:layout_width="@dimen/_115sdp"
                            android:layout_height="@dimen/_115sdp"
                            android:backgroundTint="@color/white"
                            app:strokeColor="@color/gray"
                            app:strokeWidth="@dimen/_1sdp"
                            android:layout_margin="@dimen/_12sdp"
                            app:cardElevation="@dimen/_8sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            app:cardMaxElevation="@dimen/_16sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="@dimen/_70sdp"
                                    android:layout_marginLeft="@dimen/_10sdp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/office" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-10dp"
                                    android:text="Pinjam Tempat"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14ssp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:orientation="horizontal">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardinduk"
                            android:layout_width="@dimen/_115sdp"
                            android:layout_height="@dimen/_115sdp"
                            android:backgroundTint="@color/white"
                            app:strokeColor="@color/gray"
                            app:strokeWidth="@dimen/_1sdp"
                            android:layout_margin="@dimen/_12sdp"
                            app:cardElevation="@dimen/_8sdp"
                            app:cardMaxElevation="@dimen/_16sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="@dimen/_70sdp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/woman" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-10dp"
                                    android:text="Nomor Induk\nSeniman"
                                    android:textColor="@color/black"
                                    android:textAlignment="center"
                                    android:textSize="@dimen/_14ssp"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardizin"
                            android:layout_width="@dimen/_115sdp"
                            android:layout_height="@dimen/_115sdp"
                            android:backgroundTint="@color/white"
                            app:strokeColor="@color/gray"
                            app:strokeWidth="@dimen/_1sdp"
                            android:layout_margin="@dimen/_12sdp"
                            app:cardElevation="@dimen/_8sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            app:cardMaxElevation="@dimen/_16sdp">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">

                                <ImageView
                                    android:layout_width="@dimen/_70sdp"
                                    android:layout_height="@dimen/_70sdp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/letter" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Surat Izin Pentas"
                                    android:textColor="@color/black"
                                    android:textSize="@dimen/_14ssp"
                                    android:maxLines="1"
                                    android:textStyle="bold" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </TableRow>
            </TableLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event Terkini"
                android:textSize="@dimen/_16ssp"
                android:textColor="@color/greendark"
                android:fontFamily="sans-serif"
                android:id="@+id/tv_eventTerkini"
                android:layout_below="@+id/tabellayout"
                android:textStyle="bold"
                android:layout_marginLeft="@dimen/_20sdp"
                android:shadowColor="#50000000"
                android:shadowDx="2"
                android:shadowDy="5"
                android:shadowRadius="4"
                android:layout_marginBottom="-10dp"
            />

            <!--            Komponen di bawah ini nanti akan di ganti Recview-->
<LinearLayout
    android:id="@+id/layoutevent"
    android:layout_below="@+id/tv_eventTerkini"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card1"
        app:strokeColor="@color/greendark"
        app:strokeWidth="@dimen/_1sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_120sdp"
        android:backgroundTint="@color/gray"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:outlineAmbientShadowColor="@color/greendark"
        app:cardElevation="@dimen/_10sdp"
        app:cardMaxElevation="@dimen/_20sdp"
        app:cardCornerRadius="@dimen/_10sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/_15sdp"
