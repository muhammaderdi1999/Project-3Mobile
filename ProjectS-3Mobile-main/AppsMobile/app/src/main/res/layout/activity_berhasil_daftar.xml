<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/_10sdp"
    tools:context=".KonfirmMenu.BerhasilDaftar">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BERHASIL DAFTAR"
        android:textSize="@dimen/_22ssp"
        android:layout_marginTop="@dimen/_30sdp"
        android:gravity="center_horizontal"
        android:textStyle="bold"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_200sdp"
        android:src="@drawable/anim4"
        android:layout_marginTop="@dimen/_50sdp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Akun yang telah dimasukkan berhasil terdaftar pada aplikasi"
        android:layout_marginTop="@dimen/_50sdp"
        android:textSize="@dimen/_15ssp"
        android:textColor="@color/black"
        android:textAlignment="center"/>

    <com.google.android.material.button.MaterialButton
    android:id="@+id/button_lanjut"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_50sdp"
    android:text="Kembali ke Halaman Login"
    android:textSize="@dimen/_14ssp"
        android:layout_marginTop="@dimen/_70sdp"
    android:shadowRadius="3"
    android:layout_marginLeft="@dimen/_10sdp"
    android:layout_marginRight="@dimen/_10sdp"
    android:textAllCaps="false"
    android:textColor="@color/white"
    style="@style/Widget.MaterialComponents.Button.TextButton"
    android:backgroundTint="@color/greendark"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>