<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/SelamatDatang"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".KonfirmMenu.SelamatDatang">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
    <ImageView
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_gravity="center"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_250sdp"
        android:src="@drawable/anim1"
        android:padding="@dimen/_20sdp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selamat Datang"
        android:textSize="@dimen/_30ssp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Kami hadir dengan memberikan layanan untuk memudahkan masyarakat"
        android:textSize="@dimen/_16ssp"
        android:layout_marginTop="@dimen/_20sdp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_marginLeft="@dimen/_30sdp"
        android:layout_marginRight="@dimen/_30sdp"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mulai"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:text="Mulai"
        android:paddingLeft="@dimen/_24sdp"
        android:textAlignment="center"
        android:textSize="@dimen/_20ssp"
        android:textStyle="bold"
        android:fontFamily="sans-serif"
        android:shadowRadius="3"
        android:layout_marginLeft="@dimen/_20sdp"
        android:layout_marginRight="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:drawableRight="@drawable/baseline_arrow_forward_24"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:backgroundTint="@color/greendark"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>