<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".KonfirmMenu.KonfirmasiKeAdvis">
    <include
        android:id="@+id/cardViewContainer"
        layout="@layout/fragment_view_top_konfirmasi_ke_advis" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PENGAJUAN SURAT ADVIS/IZIN PENTAS"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_17ssp"
                android:layout_marginTop="@dimen/_15sdp"
                android:gravity="center_horizontal"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tulisanatas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="Surat ini hanya dapat diajukan apabila anda memiliki kartu Nomor induk seniman. Jika anda belum memilikinya, anda dapat mendaftar terlebih dahulu."
                android:layout_marginTop="@dimen/_15sdp"
                android:textSize="@dimen/_15ssp"
                android:paddingLeft="@dimen/_20sdp"
                android:paddingRight="@dimen/_20sdp"
                android:textAlignment="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_200sdp"
                android:layout_margin="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:src="@drawable/animadvis" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Untuk mengajukan surat advis, anda dapat melengkapi formulir berikut ini"
                android:layout_marginTop="@dimen/_10sdp"
                android:textSize="@dimen/_12ssp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:textColor="@color/black"
                android:textAlignment="center" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_lanjutadvis"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_60sdp"
                android:text="Lanjut"
                android:textSize="@dimen/_16ssp"
                android:layout_marginTop="@dimen/_42sdp"
                android:shadowRadius="3"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:backgroundTint="@color/greendark" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
